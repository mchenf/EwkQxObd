@model FscEnterpriseInstance

@{
    ViewData["Title"] = "New Instance";
}

<h1 class="text-center">Enterprise Instances</h1>

<div class="row mt-3 mb-lg-5">
    <div class="col"></div>
    <div class="col-10">

        <form method="post" asp-action="Create">

            <div class="row mb-3">
                <h3 class="col-sm-8">FossConnect Server Instance</h3>
            </div>
            <partial name="EnterpriseInstanceFormPartial" model="Model" />


            <div class="row mb-3">
                <h3 class="col-sm-8">Customer Owner</h3>
            </div>
            <partial name="AccountFormPartial" for="Customer" />

            @if (ViewData["DisplayMode"] as string == "Edit")
            {
                <div class="row mt-5 mb-lg-5">
                    <div class="col-sm-1"></div>
                    <button type="submit" class="btn btn-primary col-sm-2">Submit</button>
                    <div class="col-sm-1"></div>
                    <button type="reset" class="btn btn-warning col-sm-1">Reset</button>

                    <div class="col-sm-2"></div>
                </div>
            }
        </form>
    </div>
    <div class="col"></div>
      


</div>