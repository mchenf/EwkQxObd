@model FscEnterpriseInstance

@{
    ViewData["Title"] = "New Instance";
    if (Model is null)
    {
        ViewData["DisplayMode"] = "Edit";
    }
    else
    {
        ViewData["DisplayMode"] = "View";
    }
}

<h1 class="text-center">New Enterprise Instance</h1>

<div class="row mt-3 mb-lg-5">
    <div class="col"></div>
    <div class="col-10">

        <form method="post" asp-action="Create">

            <div class="row mb-3">
                <h3 class="col-sm-8">FossConnect Server Instance</h3>
            </div>
            <partial name="EnterpriseInstanceFormPartial" model="Model" />


            <div class="row mb-3">
                <h3 class="col-sm-8">Customer Owner</h3>
            </div>
            <partial name="AccountFormPartial" for="Customer" />

            @if (ViewData["DisplayMode"] as string == "Edit")
            {
                <div class="row mt-lg-5 mb-lg-5 justify-content-center">
                    <div class="col-sm-4">
                        <button type="submit" class="btn btn-primary w-100">Submit</button>
                    </div>
                    <div class="col-sm-2">
                        <button type="button" class="btn btn-outline-success w-100">Add On</button>
                    </div>
                    <div class="col-sm-2">
                        <button type="reset" class="btn btn-warning w-100">Reset</button>
                    </div>
                </div>
            }
        </form>
    </div>
    <div class="col"></div>
      


</div>