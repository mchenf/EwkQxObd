
@{
    ViewData["Title"] = "Syngio Networks";
}


@model SyngioListNetworkViewModel




<div class="container align-content-center">
    <div class="row mb-3">
        <h1>@Model.SearchAlpha[0].System</h1>
    </div>
    <div class="row mb-3 border-2">
        @foreach (SyngioSearchAlpha a in Model.SearchAlpha)
        {
            
            string btnStyle = "btn-outline-info";
            @if (a.IsSelected)
            {
                btnStyle = "btn-info";
            }
            <div class="col-1">
                <a class="btn @btnStyle w-100 mb-1" asp-action="ListNetworks" asp-route-SearchText="@a.Initial">@a.Initial</a>
            </div>
        }
    </div>
    <div class="row">
        @foreach (var network in Model.Networks)
        {
            <div class="col-4">
                <div class="card w-100 mb-3">
                    <div class="card-body">
                        <h5 class="card-title">@network.System / @network.NetworkName</h5>
                        <p class="card-text">@network.Instruments / @network.Instrument_Linked</p>
                        <div class="progress bg-warning" role="progressbar">

                            <div class="progress-bar" style="width: @network.Progress_Instrument"></div>
                        </div>
                        <a role="button" class="btn btn-secondary w-100 mt-5 mb-5"
                        asp-action="NetworkDetail" asp-route-System="@network.System" asp-route-NetworkId="@network.NetworkId">View Network</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>