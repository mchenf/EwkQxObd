
@{
    ViewData["Title"] = "Syngio Networks";
}


@model List<SyngioViewNetwork>




<div class="container align-content-center">
    <div class="row mb-3">
        <h1>@Model[0].System</h1>
    </div>
    <div class="row mb-3 border-2">
        <div class="col-2">
            <a class="btn btn-outline-info w-100 mb-1" asp-action="ListNetworks" asp-route-SearchText="">All</a>
        </div>
        @for(int a = 65; a <= 90; a++)
        {
            char c = (char)a;
            <div class="col-1">
                <a class="btn btn-outline-info w-100 mb-1" asp-action="ListNetworks" asp-route-SearchText="@c">@c</a>
            </div>

        }
    </div>
    <div class="row">
        @foreach (var network in Model)
        {
            <div class="col-4">
                <div class="card w-100 mb-3">
                    <div class="card-body">
                        <h5 class="card-title">@network.System / @network.NetworkName</h5>
                        <p class="card-text">@network.Instruments / @network.Instrument_Linked</p>
                        <div class="progress bg-warning" role="progressbar">

                            <div class="progress-bar" style="width: @network.Progress_Instrument"></div>
                        </div>
                        <button class="btn btn-secondary w-100 mt-5 mb-5">View Network</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>