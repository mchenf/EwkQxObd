@model FscEnterpriseInstance

<div class="row mb-3">
    <h3 class="col-sm-8">FossConnect Server Instance</h3>
</div>

<div class="row mb-3">
    <label class="col-sm-2 col-form-label">Server Address</label>
    <div class="col-sm-3">
        <input class="form-control" type="text" asp-for="ServerAddress" placeholder="i.e. nirs.customer.co" />
    </div>
</div>

<div class="row mb-3">
    <label class="col-sm-2 col-form-label">Instance Name</label>
    <div class="col-sm-3">
        <input class="form-control" type="text" asp-for="InstanceName" placeholder="i.e. customer Group" />
    </div>
</div>

<div class="row mb-3">
    <label class="col-sm-2 col-form-label">TCP port</label>
    <div class="col-sm-3">
        <input class="form-control" type="text" asp-for="PortTcp" placeholder="i.e. 8001" />
    </div>
</div>

<div class="row mb-3">
    <label class="col-sm-2 col-form-label">HTTP port</label>
    <div class="col-sm-3">
        <input class="form-control" type="text" asp-for="PortTcp" placeholder="i.e. 80" />
    </div>
</div>

<div class="row mb-3">
    <label class="col-sm-2 col-form-label">HTTPS port</label>
    <div class="col-sm-3">
        <input class="form-control" type="text" asp-for="PortTcp" placeholder="i.e. 443" />
    </div>
</div>