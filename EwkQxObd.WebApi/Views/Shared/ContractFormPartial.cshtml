@model EqoContract

@{
    if (Model is null)
    {
        ViewData["DisplayMode"] = "Edit";
    }
    else
    {
        ViewData["DisplayMode"] = "View";
    }
}

<input class="form-control" type="hidden" asp-for="Id" />
<div class="row mb-3">
    <div class="col-sm-3">
        <label class="col-form-label">Contract Number</label>
    </div>
    <div class="col-sm-6">
        <input id="inpTicketNo" class="form-control" type="text" asp-for="ContractNumber" placeholder="Enter Ticket Number, i.e. 1000001234" />
    </div>
</div>
<div class="row mb-3">
    <div class="col-sm-3">
        <label class="col-form-label">Description</label>
    </div>
    <div class="col-sm-8">
        <input id="inpTicketNo" class="form-control" type="text" asp-for="Description" placeholder="Ticket Description or Subject" />
    </div>
</div>

<vc:contact-input contact="@Model?.CustomerContact" label="Customer Contact" tag-id="1"></vc:contact-input>
<vc:contact-input contact="@Model?.EmployeeResponsible" label="Employee Responsible" tag-id="2"></vc:contact-input>

<div class="row mb-3">
    <div class="col-sm-3">
        <label class="col-form-label">Valid For</label>
    </div>
    <div class="col-sm-4">
        <input id="inpCtrValidFrom" class="form-control" type="date" asp-for="ValidFrom" placeholder="Date starts, i.e. 08/29/2025" />
    </div>
    <div class="col-sm-4">
        <input id="inpCtrValidTo" class="form-control disabled" type="date" asp-for="ValidTo" placeholder="Date ends, i.e. 09/29/2026" />
    </div>
</div>