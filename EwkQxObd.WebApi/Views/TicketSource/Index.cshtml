@model List<EqoTicketSource>

@{

    int itemCount = 0;
}

<h1 class="text-center">All Tickets</h1>
<div class="container shadow p-3 mb-5 rounded">
    
    <a class="btn btn-outline-success" asp-controller="TicketSource" asp-action="Create">
        <i class="fa fa-solid fa-square-plus fa-xl"></i>
        <span>Create New Ticket</span>
    </a>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Ticket Number</th>
            <th scope="col">Description</th>
            <th scope="col">Requester</th>
            <th scope="col">Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (EqoTicketSource obj in Model)
        {
            { itemCount++; }
            <tr>
                <td scope="row">@itemCount</td>
                @await Html.PartialAsync("TicketSourceSingleLinePartial", obj)
            </tr>
        }
    </tbody>
</table>