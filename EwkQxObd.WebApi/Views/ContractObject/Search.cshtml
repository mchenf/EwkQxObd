
@{
    ViewData["Title"] = "Contract Object Search";
    int itemCount = 0;
}


@model ContractObjSearchPageModel

<h1>Search Contract Objects</h1>


<form method="post" asp-controller="ContractObject" asp-action="SearchPost">

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Contract Number</label>
        <div class="col-sm-6">
            <input class="form-control" type="text" asp-for="FilterApplied.ContractNumber" placeholder="i.e. 5432123" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Serial Number</label>
        <div class="col-sm-6">
            <input class="form-control" type="text" asp-for="FilterApplied.SerialNumber" placeholder="i.e. 987654321" />
        </div>
    </div>

    <div class="row mb-5">
        <label class="col-sm-3 col-form-label">Partner Account Number</label>
        <div class="col-sm-6">
            <input class="form-control" type="text" asp-for="FilterApplied.PartnerAccountNumber" placeholder="i.e. 123456" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-1 col-form-label">System</label>
        <div class="col-sm-3">
            <select class="form-select" aria-label="Select FossConnect System" asp-for="FilterApplied.System">
                <option selected>Pacific</option>
                <option>Pacific02</option>
                <option>China</option>
            </select>

        </div>
        <label class="col-sm-1 col-form-label">Network</label>
        <div class="col-sm-3">
            <input class="form-control" type="text" asp-for="FilterApplied.NetworkID" placeholder="i.e. 321" />
        </div>
    </div>
    <div class="row mt-5 mb-lg-5">
        <div class="col-sm-1"></div>
        <button type="submit" class="btn btn-primary col-sm-2">Submit</button>
        <div class="col-sm-1"></div>
        <div class="btn btn-warning col-sm-1">
            <a asp-action="Search" role="button">Reset</a>
        </div>

        <div class="col-sm-2"></div>
    </div>
</form>

@if (Model != null && Model.Results != null)
{
    <table class="table">
        <thead>
            <tr>
                <th class="w-20" scope="col">#</th>
                <th class="col-2" scope="col">Network</th>
                <th class="col-1" scope="col">Serial Number</th>
                <th class="col-1" scope="col">Contract Number</th>
                <th class="col-3" scope="col">Contract Description</th>
                <th class="col-2" scope="col">Instrument Type</th>
                <th class="col-3" scope="col">ShipTo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Vinlks obj in Model.Results)
            {
                { itemCount++; }
                <tr>
                    <td scope="row">@itemCount</td>
                    @await Html.PartialAsync("ContractObjSingleLinePartial", obj)
                </tr>
            }
        </tbody>
    </table>
}

