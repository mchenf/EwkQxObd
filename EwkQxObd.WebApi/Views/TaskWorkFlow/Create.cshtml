@{
    ViewData["Title"] = "Create Task Workflow";
}
@model EqoTaskWorkflow

<div class="row mb-lg-5">
    <div class="col"></div>
    <div class="col-10">

        <h1>New Work Flow</h1>
        <form method="post" asp-controller="TaskWorkFlow" asp-action="Create">

            <input class="form-control" type="hidden" asp-for="Id" />

            <div class="row mb-3">
                <div class="col-sm-2">
                    <label class="col-form-label">Ticket Number</label>
                </div>
                <div class="col-sm-6">
                    <input id="inpTwfName" class="form-control" type="text" asp-for="@Model.Name" placeholder="Short Text describe work flow name" />
                </div>
                <div class="col-sm"></div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-2">
                    <label class="col-form-label">Description</label>
                </div>
                <div class="col-sm-8">
                    <input id="inpTwfDescription" class="form-control" type="text" asp-for="@Model.Description" placeholder="Workflow Description" />
                </div>
            </div>

            <div class="row mt-lg-5 mb-lg-5 justify-content-start">
                <div class="col-sm-3">
                    <button type="submit" class="btn btn-primary w-100">Submit</button>
                </div>
                <div class="col-sm-2">
                    <button type="reset" class="btn btn-warning w-100">Reset</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col"></div>
</div>