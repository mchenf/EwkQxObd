<Window x:Class="EwkQxObdWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EwkQxObdWpf"
        xmlns:cmd="clr-namespace:EwkQxObdWpf.Command"
        mc:Ignorable="d"
        Title="E-WorkSpace FOSS IQX Onboarding Tasks" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <Style x:Key="centeredDgCell" TargetType="TextBlock">
                <Setter Property="TextAlignment" Value="Center"/>
            </Style>
            <Style x:Key="centeredDgHedr" TargetType="DataGridColumnHeader">
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <DataGrid Name="ContractsDataGrid"
                  ItemsSource="{Binding Contracts}"
                  Grid.Column="0"
                  AutoGenerateColumns="False"
                  >
            <DataGrid.Columns>
                <DataGridTemplateColumn
                    Width="1*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button>
                                <Button.Command>
                                    <cmd:CheckContractDetailCommand/>
                                </Button.Command>
                                <Button.CommandParameter>
                                    <Binding/>
                                </Button.CommandParameter>
                                Details
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn
                    Header="ID"
                    Binding="{Binding Id}"
                    Width="1*"
                    IsReadOnly="True"
                    ElementStyle="{StaticResource centeredDgCell}"
                    HeaderStyle="{StaticResource centeredDgHedr}">

                </DataGridTextColumn>
                <DataGridTextColumn
                    Header="Contract No."
                    Binding="{Binding ContractNumber}"
                    Width="3*"
                    IsReadOnly="True"
                    ElementStyle="{StaticResource centeredDgCell}"
                    HeaderStyle="{StaticResource centeredDgHedr}">

                </DataGridTextColumn>
                <DataGridTextColumn
                    Header="Description"
                    Binding="{Binding Description}"
                    Width="5*"
                    IsReadOnly="True"
                    ElementStyle="{StaticResource centeredDgCell}"
                    HeaderStyle="{StaticResource centeredDgHedr}">

                </DataGridTextColumn>

                <DataGridTextColumn
                    Header="Valid From"
                    Binding="{Binding ValidFrom, StringFormat='dd/MM/yyyy'}"
                    Width="3*"
                    IsReadOnly="True"
                    ElementStyle="{StaticResource centeredDgCell}"
                    HeaderStyle="{StaticResource centeredDgHedr}">

                </DataGridTextColumn>
                <DataGridTextColumn
                    Header="Valid To"
                    Binding="{Binding ValidTo, StringFormat='dd/MM/yyyy'}"
                    Width="3*"
                    IsReadOnly="True"
                    ElementStyle="{StaticResource centeredDgCell}"
                    HeaderStyle="{StaticResource centeredDgHedr}">

                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
